<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:id="@+id/Layout">


    <Button
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:text="Spotify Streamer"
        android:id="@+id/buttonStreamer"
        android:layout_marginTop="28dp"
        android:clickable="true"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:background="#FF9800"
        android:onClick="sendMessageStreamer" />

    <Button
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:text="Scores App"
        android:id="@+id/buttonScores"
        android:layout_marginTop="7dp"
        android:clickable="true"
        android:layout_below="@+id/buttonStreamer"
        android:layout_centerHorizontal="true"
        android:background="#FF9800"
        android:onClick="sendMessageScores"/>

    <Button
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:text="Library App"
        android:id="@+id/buttonLibrary"
        android:layout_marginTop="7dp"
        android:clickable="true"
        android:layout_below="@+id/buttonScores"
        android:layout_centerHorizontal="true"
        android:background="#FF9800"
        android:onClick="sendMessageLibrary"/>

    <Button
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:text="Build It Bigger"
        android:id="@+id/buttonBigger"
        android:layout_marginTop="7dp"
        android:clickable="true"
        android:layout_below="@+id/buttonLibrary"
        android:layout_centerHorizontal="true"
        android:background="#FF9800"
        android:onClick="sendMessageBigger"/>

    <Button
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:text="XYZ Reader"
        android:id="@+id/buttonXYZ"
        android:layout_marginTop="7dp"
        android:clickable="true"
        android:layout_below="@+id/buttonBigger"
        android:layout_centerHorizontal="true"
        android:background="#FF9800"
        android:onClick="sendMessageXYZ"/>

    <Button
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:text="Capstone Project"
        android:id="@+id/buttonCapstone"
        android:layout_marginTop="7dp"
        android:clickable="true"
        android:layout_below="@+id/buttonXYZ"
        android:layout_centerHorizontal="true"
        android:background="#F44336"
        android:onClick="sendMessageCapstone" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="My Android Apps!"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp" />

</RelativeLayout>

